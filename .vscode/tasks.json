{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "launch insomnia",
            "type": "shell",
            "command": "insomnia"
        },
        {
            "label": "Launch backend",
            "type": "shell",
            "command": "nodemon",
            "args": [
                "${workspaceFolder}/backend/server.js"
            ]
        },
        {
            "label": "Launch frontend",
            "type": "shell",
            "command": "npm",
            "args": [
                "start",
                "${workspaceFolder}/frontend/dnd.js"
            ]
        },
    ]
}
